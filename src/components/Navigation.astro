---
let res = await fetch("https://itsmil.es/wp-json/wp/v2/posts");
let posts = await res.json();
---

<ul>
	<li><a href="/">Home</a></li>
	<li><a href="/test/">Test</a></li>
	{
		posts.map((post) => (
			<li>
				<a
					href={`/blog/${post.slug}`}
					set:html={post.title.rendered}
				/>
			</li>
		))
	}
</ul>

<style>
	ul {
		margin: 0;
		padding: 0;
		list-style: none;

		display: flex;
		justify-content: flex-end;
		gap: 1.5rem;
	}
</style>
